<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.ssgsag.ui.main.calendar.CalendarViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main.schedule.CalendarFragment">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/frag_calendar_tl_tag"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:tabTextColor="@color/unselectedTabColor"
                app:tabSelectedTextColor="@color/selectedTabColor"
                app:tabMode="scrollable"
                app:tabIndicatorFullWidth="false"/>

        <LinearLayout
                android:id="@+id/frag_calendar_ll_day_of_week"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/frag_calendar_tl_tag">

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="일"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="월"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="화"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="수"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="목"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="금"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="토"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/frag_calendar_vp_page"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_calendar_ll_day_of_week"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">


        </androidx.viewpager.widget.ViewPager>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>