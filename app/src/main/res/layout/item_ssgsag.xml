<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="poster"
                type="com.ssgsag.data.model.poster.posterDetail.PosterDetail"/>
    </data>

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
                android:background="@drawable/poster_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_above="@+id/rv_poster_item_ll_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:id="@+id/rv_poster_item_rl_left_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/rv_poster_item_iv_poster"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:glideImg="@{poster.photoUrl}"/>

                    <ImageView
                            android:id="@+id/rv_poster_item_iv_poster_gradient"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/poster_gradient"/>

                    <TextView
                            android:visibility="gone"
                            android:id="@+id/rv_poster_item_iv_univ_title"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="29dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="38sp"
                            android:textColor="#616161"
                            android:letterSpacing="-0.02"
                            android:text="2019학년도 1학기 방과 후 학교 교육봉사 장학생 모집 "
                            android:fontFamily="@font/noto_sans_kr_bold"/>

                    <ImageView
                            android:id="@+id/rv_poster_item_iv_expand"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="17dp"
                            android:layout_marginBottom="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_main_expand"
                            android:layout_alignEnd="@+id/rv_poster_item_iv_poster"/>

                </RelativeLayout>

                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/rv_poster_item_ll_right_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="29dp"
                            android:layout_marginBottom="52dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                tools:text="시작일~종료일"
                                android:id="@+id/rv_poster_item_tv_term"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="33sp"
                                android:textColor="#346df3"
                                android:letterSpacing="-0.02"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                app:startDateFormat1="@{poster.posterStartDate}"
                                app:endDateFormat1="@{poster.posterEndDate}"/>
                        <TextView
                                tools:text="카테고리"
                                android:layout_marginTop="4dp"
                                android:id="@+id/rv_poster_item_tv_category_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#346df3"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/noto_sans_kr_regular"
                                app:textByCate="@{poster.categoryIdx}"
                                app:textColorByCate="@{poster.categoryIdx}"/>
                    </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_poster_item_rv_content"
                                android:scrollbars="vertical"
                                android:layout_marginHorizontal="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:nestedScrollingEnabled="true"
                                app:poster_detail="@{poster}"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/rv_poster_item_ll_desc"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:id="@+id/rv_poster_item_rl_point"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/rv_poster_item_iv_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_deadline_contest"
                            app:poster_cate_img="@{poster}"/>

                    <TextView
                            tools:text="D-day"
                            android:id="@+id/rv_poster_item_tv_d_day"
                            android:paddingBottom="10dp"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            app:posterDday="@{poster.dday}"/>
                </RelativeLayout>

                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/rv_poster_item_tv_category_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#346df3"
                            android:layout_alignParentRight="true"
                            tools:text="카테고리"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            app:textByCate="@{poster.categoryIdx}"
                            app:textColorByCate="@{poster.categoryIdx}"/>

                    <TextView
                            android:id="@+id/rv_poster_item_tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#4f4f4f"
                            android:maxLines="1"
                            tools:text="포스터 이름"
                            android:text="@{poster.posterName}"
                            android:fontFamily="@font/noto_sans_kr_medium"/>

                    <TextView
                            android:id="@+id/rv_poster_item_tv_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#346df3"
                            android:maxLines="2"
                            tools:text="#태그"
                            android:text="@{poster.keyword}"
                            android:fontFamily="@font/noto_sans_kr_regular"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_marginTop="9dp"
                        android:layout_marginHorizontal="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/rv_poster_item_iv_tab_card_left"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/tab_card_contest"
                            android:layout_marginRight="5dp"/>

                    <ImageView
                            android:id="@+id/rv_poster_item_iv_tab_card_right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/tab_card_passive"

                            android:layout_marginLeft="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

