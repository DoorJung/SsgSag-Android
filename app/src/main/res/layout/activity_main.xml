<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="vm"
                type="com.ssgsag.ui.main.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/white"
            tools:context=".ui.main.MainActivity">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/act_main_tb"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        tools:text="Title"
                        android:gravity="center_vertical"
                        android:id="@+id/act_main_tv_title"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:textColor="#4f4f4f"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="8sp"/>

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <View
                android:id="@+id/act_main_v_ssg_sag_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/selectedTabColor"
                app:layout_constraintTop_toBottomOf="@+id/act_main_tb"/>


        <com.ssgsag.util.view.NonSwipeViewPager
                android:id="@+id/act_main_vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/act_main_tb"
                app:layout_constraintBottom_toTopOf="@+id/act_main_tl"/>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/act_main_tl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tabIndicator="@null"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>